{
  "name": "MemoGarden Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/memogarden",


  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "tamasfe.even-better-toml",
        "littlefoxteam.vscode-python-test-adapter",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.ruffEnabled": true,
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/.hg/store/**": true
        }
      }
    }
  },

  // NOTE: We don't use "features" here because Dockerfile manually installs everything.
  // Using features would conflict with our manual Python 3.13 installation from deadsnakes PPA.
  // All tools are installed in Dockerfile (system) or post-create.sh (user-specific).

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "remoteUser": "vscode",
  "forwardPorts": [5000, 5001],
  "portsAttributes": {
    "5000": {
      "label": "Flask API",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "Flask API (Debug)",
      "onAutoForward": "notify"
    }
  },

  // Volumes are managed by docker-compose.yml
  // This keeps workspace mounted at /workspaces/memogarden

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ]
}
