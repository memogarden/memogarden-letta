{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.memogarden.net/items/entitydelta.schema.json",
  "title": "EntityDelta",
  "description": "Records a change to an Entity (audit trail for Core mutations)",
  "allOf": [
    {
      "$ref": "item.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "_type": {
          "const": "EntityDelta"
        },
        "entity_uuid": {
          "type": "string",
          "pattern": "^core_[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
          "description": "Which Entity this changes (core_ prefix)",
          "examples": ["core_12345678-1234-1234-1234-123456789abc"]
        },
        "entity_type": {
          "type": "string",
          "description": "Type of the Entity (e.g., 'Artifact', 'Label', 'Transaction')",
          "examples": ["Artifact", "Label", "Transaction"]
        },
        "commit": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "Hash of resulting Entity state after this delta"
        },
        "parent": {
          "oneOf": [
            { "type": "string", "pattern": "^[a-f0-9]{64}$" },
            { "type": "array", "items": { "type": "string", "pattern": "^[a-f0-9]{64}$" } },
            { "type": "null" }
          ],
          "description": "Parent commit hash(es); null for creation, array for merge"
        },
        "ops": {
          "description": "Change description (format depends on entity type; may be dict or string)",
          "oneOf": [
            { "type": "object" },
            { "type": "string" }
          ]
        },
        "context": {
          "type": ["array", "null"],
          "description": "Snapshot of ContextFrame.containers at mutation time (RFC-003)",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["entity_uuid", "entity_type", "commit", "ops"]
    }
  ]
}
